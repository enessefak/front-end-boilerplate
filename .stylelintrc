{
  "extends": [
    "stylelint-config-sass-guidelines",
    "stylelint-config-standard",
    "stylelint-config-prettier"
  ],
  "plugins": [
    "stylelint-prettier"
  ],
  "rules": {
    "prettier/prettier": true,
    "indentation": null,
    "number-leading-zero": null,
    "max-nesting-depth": 3,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "else",
          "else if",
          "each",
          "include",
          "mixin",
          "return",
          "extend"
        ]
      }
    ]
  }
}